<div class="row">
  <div class="col m3 hide-on-small-only"></div>
  <form action="#" class="col s12 m6 name_container">
    <div class="card blue-grey darken-1">
      <div class="card-content white-text">
        <div class="row">
          <div class="input-field col s12">
            <input placeholder="<%= hostname %>" id="wizard_<%= views[viewIndex].name %>_form_hostname" type="text" class="validate">
            <label for="wizard_<%= views[viewIndex].name %>_form_hostname">hostname</label>
          </div>
        </div>
      </div>
      <div id="wizard_<%= views[viewIndex].name %>_ignore_wrapper" class="displayable-60 ignore-wrapper tooltiped" data-position="top" data-tooltip="Click to do not ignore this step">
      </div>
    </div>
  </form>
</div>
<div id="wizard_<%= views[viewIndex].name %>_footer" class="row">
</div>
